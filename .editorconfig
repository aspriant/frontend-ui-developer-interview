# Stop it from looking elsewhere, parent directories
root = true

[*.md]
trim_trailing_whitespace = false

[*.js]
trim_trailing_whitespace = true

# Windows newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
insert_final_newline = true
max_line_length = 80